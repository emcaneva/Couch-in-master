<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Contrase単a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> minimo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :Contrase単a, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_Contrase単a %><br />
    <%= f.password_field :confirmar_Contrase単a, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>
<% end %>

