<p id="notice"><%= notice %></p>

<h1>Listando Hospedajes</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Lugar</th>
      <th>Informacion</th>
      <th>Descripcion</th>
      <th>Tipo de hospedaje</th>
      <th>Foto</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accommodations.each do |accommodation| %>
      <tr>
        <td><%= accommodation.titulo %></td>
        <td><%= accommodation.lugar %></td>
        <td><%= accommodation.informacion %></td>
        <td><%= accommodation.descripcion %></td>
        <td><%= AccommodationType.find(accommodation.accommodation_type_id).descripcion %></td>
        <td><%= image_tag(:Foto) %></td> 


        <td><%= link_to 'Mostrar', accommodation, :method => :get, :class => "btn btn-warning"  %></td>
        <td><%= link_to 'Editar', edit_accommodation_path(accommodation), :method => :get, :class => "btn btn-warning" %></td> 
        </td>
        <td><%= link_to 'Eliminar', accommodation,:class => "btn btn-danger", method: :delete, data: { confirm: 'esta seguro que desea eliminar ' + accommodation.titulo + '?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

